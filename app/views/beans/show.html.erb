<div class=" container container-details">
  <div class="row ">
    <div class="col-lg-5 image-container">
      <% if @bean.main_photo.attached? %>
      <%= image_tag @bean.main_photo, class: "responsive-image" %>
      <% end %>
    </div>
    <div class="col-lg-7 description">
      <%= link_to @bean.roastery.name, roastery_path(@bean.roastery) %>
      <h1><%=@bean.name%></h1>
      <%=@bean.description%>
      <ul class="description-list">
        <li>
          <strong>Origin: </strong><%=@bean.origin%>
        </li>
        <li>
          <strong>Roast level: </strong><%=@bean.roast_level%>
        </li>
        <li>
          <strong>Brewing Method: </strong><%=@bean.brewing_method%>
        </li>
      </ul>
    </div>

    <!-- Recipes -->
    <div>
      <h2>Community Recipes</h2>

        <% if @bean.recipes.any? %>
          <div class="row">
            <% @bean.recipes.each do |recipe| %>
              <div class="card col-lg-4">
                <div class="card-body">
                  <% if recipe.user == current_user %>

                    <%
=begin%>
 <%
  =begin%>
  <%= link_to "Edit", edit_bean_recipe_path(@bean, recipe), class: "underline" %>
                    <%= link_to "Delete", bean_recipe_path(@bean, recipe),
                      method: :delete,
                      data: { turbo_method: :delete, confirm: "Are you sure?" },
                      class: "underline ml-2" %>
  <%
  =end%>
<%
=end%>

                      <%= link_to edit_bean_recipe_path(@bean, recipe) do%>
                      <i class="float-end fas fa-edit"></i>
                      <% end %>
                  <% end %>
                  <h4><%= recipe.name %></h4>
                  <p><%= recipe.instructions %></p>

                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <p>No recipes yet.</p>
        <% end %>

        <%= link_to "Add Recipe", new_bean_recipe_path(@bean), class: "btn btn-submit mt-4" %>

