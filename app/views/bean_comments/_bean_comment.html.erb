<div id="bean-comment-<%= bean_comment.id %>" data-controller="like" data-like-id-value="
<%= bean_comment.id %>" data-like-bean-id-value="<%= bean_comment.bean.id %>" data-like-liked-value="
<%= user_liked?(bean_comment) %>">
  <small>
    <strong><%= bean_comment.user.user_name %></strong>
    <i><%= bean_comment.created_at.strftime("%a %b %e at %l:%M %p") %></i>
  </small>
  <p><%= bean_comment.comment %></p>

    <% if bean_comment.user == current_user %>
      <%= link_to "Delete",
            [bean_comment.bean, bean_comment],
            method: :delete,
            data: { turbo_method: :delete, confirm: "Are you sure?" },
            class: "text-red-500 hover:underline text-sm ml-2" %>
    <% end %>

  <button data-action="click->like#toggle">
    <span data-like-target="icon"><%= user_liked?(bean_comment) ? "❤️" : "🤍" %></span>
  </button>
  <span data-like-target="count"><%= bean_comment.likes_count %></span>
</div>
