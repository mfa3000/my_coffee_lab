<div class="container mt-5">
  <div class="row">
    <!-- User Information -->
    <div class="col-md-4">
      <div class="card">
        <div class="card-body text-center">
          <img src="https://via.placeholder.com/150" alt="User Avatar" class="rounded-circle mb-3">
          <h4><%= @user.user_name %></h4>
          <p><%= @user.email %></p>
        </div>
      </div>
    </div>
<!-- User Content -->
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h5>Your Content</h5>
        </div>
        <div class="card-body">
<!-- Favorites -->
          <h6>Favorites</h6>
          <div class="row">
            <div class="col-md-6">
              <h6>Beans</h6>
              <ul class="list-group">
                <% @favorites[:beans].each do |bean| %>
                  <li class="list-group-item">
                    <%= link_to bean.name, bean_path(bean) %>
                  </li>
                <% end %>
              </ul>
            </div>
            <div class="col-md-6">
              <h6>Places</h6>
              <ul class="list-group">
                <% @favorites[:places].each do |place| %>
                  <li class="list-group-item">
                    <%= link_to place.name, place_path(place) %>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
<!-- User-Created Beans -->
          <h6 class="mt-4">Your Beans</h6>
          <ul class="list-group">
            <% @user_beans.each do |bean| %>
              <li class="list-group-item">
                <%= link_to bean.name, bean_path(bean) %>
              </li>
            <% end %>
          </ul>

          <!-- User-Created Places -->
          <h6 class="mt-4">Your Places</h6>
          <ul class="list-group">
            <% @user_places.each do |place| %>
              <li class="list-group-item">
                <%= link_to place.name, place_path(place) %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
