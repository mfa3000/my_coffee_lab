<div class="home-page">
  <h1>Welcome to My Coffee Lab</h1>
  <p>Choose what youâ€™d like to explore:</p>

  <div class="options">
    <%= link_to "Explore Beans", beans_path, class: "btn btn-primary" %>
    <%= link_to "Explore Roasteries", roasteries_path, class: "btn btn-secondary" %>
  </div>
</div>

<div id="beansCarousel" class="carousel slide mt-4" data-ride="carousel">
  <div class="carousel-inner">
    <% @beans.each_with_index do |bean, index| %>
      <div class="carousel-item <%= 'active' if index == 0 %>">
        <div class="card" style="width: 18rem;">
          <img src="<%= bean.image %>" class="card-img-top" alt="<%= bean.name %>">
          <div class="card-body">
            <h5 class="card-title"><%= bean.name %></h5>
            <p class="card-text"><%= bean.description %></p>
            <%= link_to "View Details", bean_path(bean), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <a class="carousel-control-prev" href="#beansCarousel" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>

  <a class="carousel-control-next" href="#beansCarousel" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
